<% title "Divisions" %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th class="actions">Actions</th>
  </tr>
  <% for division in @divisions %>
    <tr>
      <td><%= link_to division.name, edit_division_path(division) %></td>
      
      <td>
      <%= link_to division, :class =>'btn' do %>
		<i class="icon-eye-open"></i>
	  <% end %>
	  
	  <%= link_to edit_division_path(division), :class =>'btn' do %>
		<i class="icon-edit"></i>
	  <% end %>
	  
	  <%= link_to division, :confirm => 'Are you sure?', :method => :delete, :class =>'btn btn-danger' do %>
		<i class="icon-trash icon-white"></i>
	  <% end %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Division", new_division_path, :class =>'btn btn-primary' %></p>