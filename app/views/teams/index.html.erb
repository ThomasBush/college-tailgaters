<% title "Teams" %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Nickname</th>
    <th>Shortname</th>
    <th>Users</th>
    <th>Locations</th>
    <th class="actions">Actions</th>
  </tr>
  <% for team in @teams %>
    <tr>
      <td><%= link_to team.name, edit_team_path(team)  %></td>
      <td><%= team.nickname %></td>
      <td><%= team.shortname %></td>
      <td><%= team.users.count(:all) %></td>
      <td><%= team.locations.count(:all) %></td>
      <td>
          <%= link_to team, :class =>'btn' do %>
			<i class="icon-eye-open"></i>
		  <% end %>
		  
		  <%= link_to edit_team_path(team), :class =>'btn' do %>
			<i class="icon-edit"></i>
		  <% end %>
		  
		  <%= link_to team, :confirm => 'Are you sure?', :method => :delete, :class =>'btn btn-danger' do %>
			<i class="icon-trash icon-white"></i>
		  <% end %>
       </td>
		
    </tr>
  <% end %>
</table>

<p><%= link_to "New Team", new_team_path, :class =>'btn btn-primary' %></p>
