<% title "Locations" %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th class="actions">Actions</th>
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= link_to location.name, edit_location_path(location)  %></td>
      <td><%= location.address %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.zip %></td>
      
      <td>
		<%= link_to location, :class =>'btn' do %>
			<i class="icon-eye-open"></i>
		<% end %>
		
		<%= link_to edit_location_path(location), :class =>'btn' do %>
			<i class="icon-edit"></i>
		<% end %>
		
		<%= link_to location, :confirm => 'Are you sure?', :method => :delete, :class =>'btn btn-danger' do %>
			<i class="icon-trash icon-white"></i>
		<% end %>
      </td>
      
    </tr>
  <% end %>
</table>

<p><%= link_to "New Location", new_location_path, :class =>'btn btn-primary'%></p>
