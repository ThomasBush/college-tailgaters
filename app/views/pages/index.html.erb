<% title "Pages" %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
    <th class="actions">Actions</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td><%= truncate(page.content, :length => 300, :omission =>"...") %></td>
      <td>
		<%= link_to page, :class =>'btn' do %>
			<i class="icon-eye-open"></i>
		<% end %>
		
		<%= link_to edit_page_path(page), :class =>'btn' do %>
			<i class="icon-edit"></i>
		<% end %>
		
		<%= link_to page, :confirm => 'Are you sure?', :method => :delete, :class =>'btn btn-danger' do %>
			<i class="icon-trash icon-white"></i>
		<% end %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Page", new_page_path %></p>
