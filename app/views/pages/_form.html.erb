<%= simple_form_for @page, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset> 
    <%= f.input :name %>
    <%= f.input :permalink %>
    <%= f.input :content %>
	<div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', pages_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
